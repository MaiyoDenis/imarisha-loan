# =============================================================================
# IMARISHA LOAN SYSTEM - ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Configuration
# For local development, use your local PostgreSQL credentials
DATABASE_URL=postgresql://postgres:password@localhost:5432/imarisha_loan_db

# For cloud PostgreSQL (uncomment and modify as needed):
# DATABASE_URL=postgresql://username:password@host:port/database_name
# Example for Render.com:
# DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production-123456789

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================
# Local Redis (if using Redis for caching)
REDIS_URL=redis://localhost:6379/0

# Cloud Redis (if using cloud Redis service)
# REDIS_URL=redis://username:password@host:port

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
# For local development
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# =============================================================================
# M-PESA INTEGRATION (OPTIONAL)
# =============================================================================
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_PASSKEY=your-passkey
MPESA_BUSINESS_SHORT_CODE=your-business-code
MPESA_CALLBACK_URL=https://your-domain.com/api/payments/mpesa/callback

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# =============================================================================
# AI/ML SERVICE KEYS (OPTIONAL)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=1

# =============================================================================
# FILE STORAGE (OPTIONAL)
# =============================================================================
# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1

# =============================================================================
# ANALYTICS & MONITORING (OPTIONAL)
# =============================================================================
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
